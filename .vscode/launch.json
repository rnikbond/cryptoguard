    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch Debug app",
            "program": "${workspaceFolder}/build/CryptoGuard",
            "args": [
                "-i",
                "input.txt",
                "--command",
                "encrypt",
                "--password",
                "123321123"
            ],
            "cwd": "${workspaceFolder}/build",
            "preLaunchTask": "GCC: Build Debug",
            "initCommands": [
                "settings set target.disable-aslr false"
            ],
            "stopOnEntry": false,
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch Debug unit_tests",
            "program": "${workspaceFolder}/build/unit_tests",
            "args": [
            ],
            "cwd": "${workspaceFolder}/build",
            "preLaunchTask": "GCC: Build Debug",
            "initCommands": ["settings set target.disable-aslr false"]
        }
    ]
}
